<% layout('/layouts/boilerplate') %>
<style>
.custom-star-rating {
  direction: rtl;
  display: flex;
  justify-content: flex-start;
  gap: 8px;
}

.custom-star-rating input[type="radio"] {
  display: none;
}

.custom-star-rating label {
  width: 40px;
  height: 40px;
  background: #ccc;
  clip-path: polygon(
    50% 0%,
    61% 35%,
    98% 35%,
    68% 57%,
    79% 91%,
    50% 70%,
    21% 91%,
    32% 57%,
    2% 35%,
    39% 35%
  );
  cursor: pointer;
  transition: background 0.3s;
}

/* Fill stars on hover */
.custom-star-rating label:hover,
.custom-star-rating label:hover ~ label {
  background: #ffc107;
}

/* Fill stars on selection */
.custom-star-rating input[type="radio"]:checked ~ label {
  background: #ffc107;
}
</style>

<body class="bg-light py-5 custom-show-body">
  <div class="container">
    <div class="card shadow show-card mb-5">
      <div class="row g-0 flex-column flex-md-row">
        <!-- Listing Image -->
        <div class="col-md-6 show-img-container">
          <img
            src="<%= Listing.image.url %>"
            alt="Listing Image"
            class="img-fluid rounded-start show-img"
          />
        </div>

        <!-- Listing Details -->
        <div class="col-md-6 p-4">
          <h2 class="show-title mb-3"><%= Listing.title %></h2>
          <p class="text-muted"><%= Listing.description %></p>

          <ul class="list-group list-group-flush show-list">
            <li class="list-group-item">
              <strong>Price:</strong> ₹ <%=
              Listing.price.toLocaleString('en-IN') %>
            </li>
            <li class="list-group-item">
              <strong>Location:</strong> <%= Listing.location %>
            </li>
            <li class="list-group-item">
              <strong>Country:</strong> <%= Listing.country %>
            </li>
            <li class="list-group-item">
              <strong>Email:</strong> <%= Listing.email %>
            </li>
          </ul>

          <div class="mt-4 d-flex flex-wrap show-button-group">
            <a
              href="/listings/<%= Listing._id %>/edit"
              class="btn btn-outline-primary"
              >Edit</a
            >
            <form
              method="POST"
              action="/listings/<%= Listing._id %>?_method=DELETE"
            >
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a href="/listings" class="btn btn-secondary">← Back</a>
          </div>
        </div>
      </div>
    </div>
    <div class="card shadow show-card mb-5">
      <h3 class="p-3 text-primary bg-light rounded">Leave a Review</h3>
        <form action="/listings/<%= Listing._id %>/reviews" method="POST" 
      class="bg-white p-4 rounded shadow needs-validation" novalidate>
            <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea class="form-control" id="comment" name="review[Comment]" rows="4" required></textarea>
                <div class="invalid-feedback">Please enter your comment.</div>
            </div>

            <div class="mb-4">
                <label class="form-label d-block mb-2">Rating</label>
                <div class="custom-star-rating">
                <input type="radio" id="star5" name="review[rating]" value="5" required><label for="star5" title="5 stars"></label>
                <input type="radio" id="star4" name="review[rating]" value="4"><label for="star4" title="4 stars"></label>
                <input type="radio" id="star3" name="review[rating]" value="3"><label for="star3" title="3 stars"></label>
                <input type="radio" id="star2" name="review[rating]" value="2"><label for="star2" title="2 stars"></label>
                <input type="radio" id="star1" name="review[rating]" value="1"><label for="star1" title="1 star"></label>
                </div>
                <div class="invalid-feedback">Please select a rating.</div>
            </div>

            <button type="submit" class="btn btn-warning px-4 fw-bold">Submit Review</button>
        </form>

    </div>
  </div>
</body>
