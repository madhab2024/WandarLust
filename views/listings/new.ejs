<% layout('/layouts/boilerplate') %>
<body class="bg-light py-5">
    <div class="container">
        <h1 class="mb-4 text-center">Create New Post</h1>
        <form action="/listings" method="POST" class="bg-white p-5 rounded shadow-sm needs-validation" novalidate>

            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title<span class="text-danger">*</span></label>
                <input type="text" name="listing[title]" id="title" class="form-control" placeholder="Enter Title" required>
                <div class="valid-feedback">Title looks good!</div>
                <div class="invalid-feedback">Please enter the title.</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" id="description" class="form-control" placeholder="Enter description about the place" rows="3"></textarea>
            </div>

            <!-- Price and Email in same row -->
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="price" class="form-label">Price<span class="text-danger">*</span></label>
                    <input type="number" name="listing[price]" id="price" class="form-control" placeholder="Enter Price" required>
                    <div class="valid-feedback">Price is valid!</div>
                    <div class="invalid-feedback">Please enter the price.</div>
                </div>

                <div class="mb-3 col-md-6">
                    <label for="email" class="form-label">Email<span class="text-danger">*</span></label>
                    <input type="email" name="listing[email]" id="email" class="form-control" placeholder="Enter your email" required>
                    <div class="valid-feedback">Email looks valid!</div>
                    <div class="invalid-feedback">Please enter a valid email.</div>
                </div>
            </div>

            <!-- Image URL and Filename in same row -->
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="imageUrl" class="form-label">Image URL</label>
                    <input type="text" name="listing[image][url]" id="imageUrl" class="form-control" placeholder="Enter image URL">
                </div>

                <div class="mb-3 col-md-6">
                    <label for="imageFilename" class="form-label">Image Filename</label>
                    <input type="text" name="listing[image][filename]" id="imageFilename" class="form-control" placeholder="Enter image filename">
                </div>
            </div>

            <!-- Country and Location in same row -->
            <div class="row mb-4">
                <div class="mb-3 col-md-6">
                    <label for="country" class="form-label">Country<span class="text-danger">*</span></label>
                    <input type="text" name="listing[country]" id="country" class="form-control" placeholder="Enter country" required>
                    <div class="valid-feedback">Country looks good!</div>
                    <div class="invalid-feedback">Please enter the country.</div>
                </div>

                <div class="mb-3 col-md-6">
                    <label for="location" class="form-label">Location<span class="text-danger">*</span></label>
                    <input type="text" name="listing[location]" id="location" class="form-control" placeholder="Enter location" required>
                    <div class="valid-feedback">Location looks good!</div>
                    <div class="invalid-feedback">Please enter the location.</div>
                </div>
            </div>

            <!-- Submit -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary" style="background-color: #ff385c; border: none;">Add</button>
            </div>
        </form>
    </div>
</body>
