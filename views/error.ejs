<% layout('/layouts/boilerplate') %>

<div class="container text-center my-5">
    <div class="card shadow p-4">
        <div class="card-body">
            <h1 class="display-4 text-danger">Oops! Something went wrong</h1>
            <p class="lead text-muted"><%= err.message || 'An unexpected error occurred.' %></p>
            <p class="text-secondary">Status Code: <strong><%= err.status || 500 %></strong></p>
            
            <img src="https://cdn-icons-png.flaticon.com/512/564/564619.png" alt="Error illustration" class="img-fluid my-4" style="max-width: 200px;">

            <a href="/listings" class="btn btn-outline-primary">Back to Listings</a>
        </div>
    </div>
</div>
